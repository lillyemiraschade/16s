# ─── REQUIRED ─── (app won't start without these)

# Anthropic Claude API key (https://console.anthropic.com/settings/keys)
ANTHROPIC_API_KEY=

# Supabase project credentials (https://supabase.com/dashboard/project/_/settings/api)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ─── OPTIONAL ─── (features degrade gracefully without these)

# Vercel Blob storage for image uploads (https://vercel.com/docs/storage/vercel-blob)
BLOB_READ_WRITE_TOKEN=

# remove.bg API key for background removal (https://www.remove.bg/api)
REMOVE_BG_API_KEY=

# Supabase admin key — only needed for Stripe webhook to update user subscriptions
# (https://supabase.com/dashboard/project/_/settings/api → service_role key)
SUPABASE_SERVICE_ROLE_KEY=

# Vercel deployment — enables one-click deploy feature
# Token: https://vercel.com/account/tokens
# Team ID: https://vercel.com/account → General → Team ID (leave blank for personal)
VERCEL_TOKEN=
VERCEL_TEAM_ID=

# Stripe payments — enables paid plans (https://dashboard.stripe.com/apikeys)
# Webhook secret: https://dashboard.stripe.com/webhooks → signing secret
# Price IDs: https://dashboard.stripe.com/products → click product → price ID
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_PRICE_ID=
STRIPE_TEAM_PRICE_ID=
